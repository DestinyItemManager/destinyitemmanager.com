{
  "name": "destinyitemmanager.com",
  "version": "1.0.0",
  "description": "destinyitemmanager website",
  "main": "index.js",
  "repository": "https://github.com/DestinyItemManager/destinyitemmanager.com.git",
  "author": "DIM",
  "license": "MIT",
  "scripts": {
    "i18n:json": "jsonsort template/locales",
    "i18n:en-US": "fileutils cp template/locales/en.json template/locales/en-US.json --force",
    "i18n:es-MX": "fileutils mv template/locales/es-mx.json template/locales/es-MX.json --force",
    "i18n:pt-BR": "fileutils mv template/locales/pt-br.json template/locales/pt-BR.json --force",
    "i18n:zh-CHS": "fileutils mv template/locales/zh-chs.json template/locales/zh-CHS.json --force",
    "i18n:zh-CHT": "fileutils mv template/locales/zh-cht.json template/locales/zh-CHT.json --force",
    "i18n:static": "static-i18n -l en-US -i en-US -i en -i de -i es -i es-MX -i fr -i it -i ja -i ko -i pl -i pt-BR -i ru -i zh-CHS -i zh-CHT template -o src",
    "i18n:pretty": "prettier --write src/**/*.html template/index.html src/index.html",
    "i18n:cleanup": "fileutils mv template/locales/en-US.json template/locales/en.json --force",
    "i18n": "run-s i18n:*",
    "pretty": "prettier --write src/**/*.html template/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "jsonsort template/locales && pretty-quick --staged"
    }
  },
  "dependencies": {
    "fileutils-cli": "^1.0.1",
    "json-sort-cli": "^2.0.7",
    "npm-run-all2": "^5.0.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "static-i18n": "^0.2.10"
  },
  "devDependencies": {
    "husky": "^5.1.3"
  }
}
