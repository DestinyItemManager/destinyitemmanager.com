{
  "name": "destinyitemmanager.com",
  "version": "1.0.0",
  "description": "destinyitemmanager website",
  "main": "index.js",
  "repository": "https://github.com/DestinyItemManager/destinyitemmanager.com.git",
  "author": "DIM",
  "license": "MIT",
  "scripts": {
    "i18n:en-US": "cpy template/locales/en.json template/locales --rename='en-US.json'",
    "i18n:es-MX": "cpy template/locales/es-mx.json template/locales --rename='es-MX.json'",
    "i18n:pt-BR": "cpy template/locales/pt-br.json template/locales --rename='pt-BR.json'",
    "i18n:zh-CHS": "cpy template/locales/zh-chs.json template/locales --rename='zh-CHS.json'",
    "i18n:zh-CHT": "cpy template/locales/zh-cht.json template/locales --rename='zh-CHT.json'",
    "i18n:static": "static-i18n -l en-US -i en-US -i en -i de -i es -i es-MX -i fr -i it -i ja -i ko -i pl -i pt-BR -i ru -i zh-CHS -i zh-CHT template -o src && prettier --write src/**/*.html template/index.html",
    "i18n": "run-s i18n:*",
    "pretty": "prettier --write src/**/*.html template/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "cpy-cli": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "static-i18n": "^0.2.10"
  },
  "devDependencies": {
    "husky": "^5.1.3"
  }
}
